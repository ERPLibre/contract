<odoo>

    <record id="contract_contract_form_view_website" model="ir.ui.view">
        <field name="name">contract.contract form view (in portal)</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="website_template_id"/>
                <field name="require_signature"/>
            </field>
            <xpath expr="//header" position="inside">
                <button name="preview_contract" type="object" string="Preview"/>

                <button name="action_cancel" states="done" type="object" string="Cancel Contract"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,done,canceled"/>
            </xpath>
        </field>
    </record>

</odoo>
