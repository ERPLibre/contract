<?xml version="1.0" ?>
<odoo>

    <template id="report_contract_document" inherit_id="contract.report_contract_document">

        <xpath expr="//div[@class='page']" position="inside">
            <t t-if="o.require_signature">
                <div class="mt32 ml16 mr16" name="signature">
                    <div class="offset-8">
                        <strong>Customer Acceptance: </strong>
                    </div>
                    <div class="offset-8">
                        <t t-if="o.customer_signature">
                            <img t-att-src="image_data_uri(o.customer_signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </t>
                        <t t-if="not o.customer_signature">
                            <hr style="width: 100%; margin-top: 1.5cm; margin-bottom: 0.2cm;"/>
                        </t>

                    </div>
                    <div class="offset-8 text-center">
                        <p t-field="o.signature_name"/>
                        <p t-field="o.signature_time" widget="float_time"/>
                    </div>
                </div>
            </t>
        </xpath>

    </template>

</odoo>
